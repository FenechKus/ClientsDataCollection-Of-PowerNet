<Window x:Class="ClientsDataCollection.Views.Add"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ClientsDataCollection.Views"
        mc:Ignorable="d"
        Title="Add" Height="190" Width="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Name"/>
            <TextBox x:Name="NameBox"/>
            <TextBlock Text="Address"/>
            <TextBox x:Name="AddressBox"/>
            <TextBlock Text="Phone"/>
            <TextBox x:Name="PhoneBox"/>
            <TextBlock Text="Tarif"/>
            <TextBox x:Name="TarifBox"/>
            <Button Content="Apply" Click="ApplyClick"/>
            <Button Content="Cancel" Click="CancelClick"/>
        </StackPanel>
    </Grid>
</Window>
